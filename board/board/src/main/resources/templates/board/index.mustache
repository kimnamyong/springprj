{{>layouts/header}}
<div class="container">
  <table class="table">
    <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">사용자</th>
      <th scope="col">Title</th>
      <th scope="col">Content</th>
    </tr>
    </thead>
    <tbody>
    {{#boardList}}
      <tr>
        <td>{{id}}</td>
        <td>{{username}}</td>
        <td><a href="/board/{{id}}">{{title}}</a></td>
        <td>{{content}}</td>
      </tr>
    {{/boardList}}
    </tbody>
  </table>
  <a href="/boards/new" class="btn btn-primary"> 새글작성</a>
</div>


{{>layouts/footer}}